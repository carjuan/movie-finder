<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Oswald:wght@600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" asp-append-version="true" />

    <!-- Customized Bootstrap Stylesheet -->
    @*<link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/lib/bootstrap5/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />

    <!-- Template Stylesheet -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
	<!-- Navbar Start -->
	<nav class="navbar navbar-expand-lg bg-secondary navbar-dark sticky-top py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
		<a href="index.html" class="navbar-brand ms-4 ms-lg-0">
			<h1 class="mb-0 text-primary text-uppercase"><i class="fa-solid fa-couch"></i> Movie Find</h1>
		</a>
		<button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarCollapse">
			<div class="navbar-nav ms-auto p-4 p-lg-0">
				<a href="" class="btn btn-primary rounded-0 py-2 me-4 px-lg-4 d-none d-lg-block">Try it</a>
				<a href="" class="btn btn-primary rounded-0 py-2 px-lg-4 d-none d-lg-block">Sign In</a>
			</div>
		</div>
	</nav>
	<!-- Navbar End -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	<!-- Back to Top -->
	<a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap5/js/bootstrap.js"></script>
    <script src="~/lib/wow/wow.js"></script>
    <script src="~/lib/jquery-easing/jquery.easing.js"></script>
    <script src="~/lib/waypoints/jquery.waypoints.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
