@model Movie
@{

    string MoviePosterUrl = $"http://image.tmdb.org/t/p/w220_and_h330_face{Model.PosterPath}";
}
<div class="col-lg-2 wow fadeInUp" data-wow-delay="0.1s">
        <div class="team-item">
                <div class="team-img position-relative overflow-hidden">
                        <img class="img-fluid" src="@MoviePosterUrl" alt="">
                        <div class="team-social">
                                <span class="text-primary">@Model.Overview</span>
                        </div>
                </div>
                <div class="bg-secondary text-center p-4">
                        <h5 class="text-uppercase">@Model.Title</h5>
                        <span class="text-primary">Review: @Model.VoteAverage</span>
                </div>
        </div>
</div>
